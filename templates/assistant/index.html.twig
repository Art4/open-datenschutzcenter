{% extends 'base.html.twig' %}
{% trans_default_domain 'assistant' %}

{% block CTA %}
    <h4>
        {{ 'assistant.word' | trans }}
    </h4>
{% endblock %}

{% block body %}
    <div>
        <h2>{% trans %}assistant.word{% endtrans %}</h2>
        <div>
            {% if app.request.hasPreviousSession %}
                {% for type, messages in app.session.flashbag.all() %}
                    {% for message in messages %}
                        <div role="alert">
                            {{ message | trans }}
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}
            <p>{% trans %}assistant.info{% endtrans %}</p>
            <p>
                <a href="{{ path('assistant_step',{'step':0}) }}">{% trans %}assistant.start{% endtrans %}</a>
            </p>
        </div>
    </div>
{% endblock %}
