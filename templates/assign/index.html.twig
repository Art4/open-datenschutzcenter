{% extends 'base.html.twig' %}

{% block CTA %}
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">Meine Zuweisungen</h2>
    <div class="card card-body">
        {% for a in assign %}
            {% if a.activ == 1 %}
                <a href="{% if a.name is defined %}{{ path('vvt_edit',{'id':a.id}) }}{% else %}{{ path('audit_tom_edit',{'tom':a.id}) }}{% endif %}">
                    <div class="card card-body note-info mb-1">
                        <div class="row">
                            <div class="col-md-1">
                                {% if a.name is defined %}<img style="width: 30px"
                                                               src="{{ asset('icons/prozess.svg') }}">{% else %}<img
                                    style="width: 30px" src="{{ asset('icons/pruefung.svg') }}">{% endif %}
                            </div>
                            <div class="col-md-4">
                                {% if a.name is defined %}{{ a.name }}{% elseif a.frage is defined %}{{ a.frage }}{% endif %}
                            </div>
                            <div class="col-md-3">
                                Erstellt am: {{ a.createdAt|date('d.m.Y') }}
                            </div>
                            <div class="col-md-2">
                                {{ a.nummer }}
                            </div>
                            <div class="col-md-2">
                                {{ a.status.name }}
                            </div>
                        </div>
                    </div>
                </a>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
