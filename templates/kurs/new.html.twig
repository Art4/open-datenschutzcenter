        <h2 class="h2-responsive">{{ title }}</h2>
        <div class="card card-body">
            {{ include('datenweitergabe/__form.html.twig') }}
        </div>
        <p>{% trans from 'general' %}createdBy{% endtrans %}: {{ daten.user.email }}</p>
