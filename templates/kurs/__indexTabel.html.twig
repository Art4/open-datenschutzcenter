<h2 class="h2-responsive">{{ titel }}</h2>
<div class="card card-body">
    <div class="table-responsive">
        <table id="data-table" class="table display table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titel</th>
                <th scope="col">Erstellt/Update am</th>
                <th scope="col">Aktionen</th>
            </tr>
            </thead>
            <tbody>
            {% for t in table %}
                <tr>
                    <th scope="row">{{ t.id }}</th>
                    <td>{{ t.title }}</td>
                    <td>{{ t.createdAt|date('d.m.Y') }}</td>
                    <td>
                        <a href="{{ path('kurs_anmelden',{'id':t.id}) }}" class="btn btn-sm btn-success">Anmelden</a>
                        {% if app.user == t.user %}<a href="{{ path('akademie_kurs_edit',{'id':t.id}) }}"
                                                      class="btn btn-sm btn-info">Bearbeiten</a>{% endif %}
                        <a href="{{ path('kurs_deaktivieren',{'id':t.id}) }}" class="btn btn-sm btn-danger">LÃ¶schen</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>