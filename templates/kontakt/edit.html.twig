{% extends 'base.html.twig' %}
{% block CTA %}
    {% if new is not defined %}
        {{ include('base/__approveBtn.html.twig',{'data':kontakt,'dataLink':'kontakt_approve'}) }}
        {{ include('base/__disableBtn.html.twig',{'data':kontakt,'dataLink':'kontakt_disable'}) }}
    {% endif %}
{% endblock %}
{% block body %}

    <h2>{{ title }}</h2>
    {{ include('base/__approvedBy.html.twig', {'data':kontakt}) }}

    <div>
        {{ form_start(form) }}
        <div>
            <div>{{ form_row(form.art) }}</div>
            <div>{{ form_row(form.nummer) }}</div>
            <div>{{ form_row(form.firma) }}</div>
        </div>
        <div>
            <div>{{ form_row(form.anrede) }}</div>
            <div>{{ form_row(form.vorname) }}</div>
            <div>{{ form_row(form.nachname) }}</div>
        </div>
        <div>
            <div>{{ form_row(form.strase) }}</div>
            <div>{{ form_row(form.plz) }}</div>
            <div>{{ form_row(form.ort) }}</div>
        </div>
        <div>
            <div>{{ form_row(form.email) }}</div>
            <div>{{ form_row(form.telefon) }}</div>
        </div>
        <div>
            <div>{{ form_row(form.bemerkung) }}</div>
        </div>
        {{ form_widget(form.save) }}
        {{ form_end(form) }}
    </div>

    {{ include('base/__snack.html.twig') }}
{% endblock %}

{% block javascript %}
{% endblock %}
