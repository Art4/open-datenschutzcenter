{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block CTA %}
    <a class="btn btn-primary ml-1 btn-sm" href="{{ path('kontakt_new') }}">
        <span>{{ title }} anlegen</span>
    </a>
{% endblock %}
{% block body %}
    <h2 class="h2-responsive">{{ title }}</h2>
    <div class="card card-body table-responsive">
        <table id="data-table" class="table display table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Firma</th>
                <th scope="col">Name</th>
                <th scope="col">Ort</th>
                <th scope="col">Funktion</th>
            </tr>
            </thead>
            <tbody>
            {% for k in kontakte %}
                <tr class="clickable-row" data-href='{{ path('kontakt_edit',{'id':k.id}) }}'>
                    <th scope="row">{{ k.nummer }}</th>
                    <td>{{ k.firma }}</td>
                    <td>{{ k.nachname }}</td>
                    <td>{{ k.ort }}</td>
                    <td>{% if k.art == 1 %}Auftraggeber{% elseif k.art == 2 %}Auftragnehmer{% endif %}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
