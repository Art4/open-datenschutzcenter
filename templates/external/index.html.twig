{% extends 'base.html.twig' %}
{% trans_default_domain 'external' %}
{% block CTA %}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <div class="card card-body">
                <div class="form-check">
                    <input id="checkboxDoc" type="checkbox" class="checkboxSelect form-check-input" name="Doc"
                           value="Doc">
                    <label class="form-check-label"
                           for="checkboxDoc">{% trans %}externalCheck{% endtrans %}</label>
                </div>
            </div>
        </div>
        {% if team.video %}
            <div class="col-md-6 mt-2">

                <div class="card">
                    <div class="card-header">
                        <h3 class="h3-responsive">{% trans with {'{video}': team.video} %}videoConference.about{% endtrans %}</h3>
                    </div>
                    <div class="card-body">
                        <p>{% trans %}disclaimer.jitsi{% endtrans %}</p>
                        <a href="{{ team.video }}/{{ hash }}" class="btn btn-cyan sendButton disabled" target="_blank"
                           referrerpolicy="no-referrer">{% trans %}to.videoConference{% endtrans %}</a>
                    </div>
                    <div class="card-footer">
                        @ {{ team.video }}
                    </div>
                </div>
            </div>
        {% endif %}
        {% if team.externalLink %}
            <div class="col-md-6 mt-2">
                <div class="card">
                    <div class="card-header">
                        <h3 class="h3-responsive">{% trans %}externalResource{% endtrans %}</h3>
                    </div>
                    <div class="card-body">
                        <p>{% trans %}disclaimer.external{% endtrans %}</p>

                        <a href="{{ team.externalLink }}" class="btn btn-cyan sendButton disabled" target="_blank"
                           referrerpolicy="no-referrer">{% trans %}to.document{% endtrans %}</a>
                    </div>
                    <div class="card-footer">
                        {{ team.externalLink }}
                    </div>
                </div>
            </div>
        {% endif %}
    </div>

{% endblock %}
