{% extends 'base.html.twig' %}

{% block CTA %}
    <a class="btn btn-primary ml-1 btn-sm" href="{{ path('task_new') }}">
        <span>Neue Aufgabe anlegen</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">Aufgaben Ãœbersicht</h2>
    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titel</th>
                    <th scope="col">Beschreibung</th>
                    <th scope="col">Erstellt am</th>
                    <th scope="col">Zugewiesen an</th>
                    <th scope="col">Erledigt</th>
                </tr>
                </thead>
                <tbody>
                {% for t in task %}
                    <tr class="clickable-row" {% if t.done %}style="background-color: #00e676"{% endif %}
                        data-href='{{ path('task_edit',{'id':t.id}) }}'>
                        <th scope="row">{{ t.id }}</th>
                        <td>{{ t.title }}</td>
                        <td>{{ t.task|raw }}</td>
                        <td>{{ t.createdAt|date('d.m.Y') }}</td>
                        <td>{% if t.assignedUser %}{{ t.assignedUser.username }}{% endif %}</td>
                        <td>{% if t.done %}Ja{% else %}Nein{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
