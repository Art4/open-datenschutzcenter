<h2 class="h2-responsive">{{ titel }}</h2>
<div class="card card-body">
    <div class="table-responsive">
        <table id="data-table" class="table display table-striped">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Titel</th>
                <th scope="col">Status</th>
                <th scope="col">Version</th>
                <th scope="col">Beschreibung</th>
                <th scope="col">Produkte</th>
                <th scope="col">Abteilungen</th>
                <th scope="col">Datum</th>
            </tr>
            </thead>
            <tbody>
            {% for t in table %}
                <tr class="clickable-row" data-href='{{ path('forms_edit',{'id':t.id}) }}'>
                    <th scope="row">{{ t.id }}</th>
                    <td>{{ t.title }}</td>
                    <td>{{ t.statusString }}</td>
                    <td>{{ t.version }}</td>
                    <td>{{ t.description }}</td>
                    <td>{% if t.products %}{% for de in t.products %}{{ de.name }}<br>{% endfor %}{% endif %}</td>
                    <td>{% if t.departments %}{% for de in t.departments %}{{ de.name }}<br>{% endfor %}{% endif %}</td>
                    <td>{{ t.createdAt|date('Y.m.d') }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>