{% extends 'base.html.twig' %}

{% block CTA %}
    <a class="btn btn-indigo ml-1 btn-sm" href="{{ path('policy_new') }}">
        <span>{% trans %}newPolicy{% endtrans %}</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">{% trans %}internalPolicies{% endtrans %}</h2>

    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped ">
                <thead>
                <tr>
                    <th scope="col">{% trans %}fileNumber{% endtrans %}</th>
                    <th scope="col">{% trans %}description{% endtrans %}</th>
                    <th scope="col">{% trans %}scopes{% endtrans %}</th>
                    <th scope="col">{% trans %}processings{% endtrans %}</th>
                    <th scope="col">{% trans %}status{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for d in data %}
                    <tr class="clickable-row" data-href='{{ path('policy_edit',{'id':d.id}) }}'>
                        <th scope="row">{{ d.reference }}</th>
                        <td>{{ d.title }}</td>
                        <td>{{ d.scope|raw }}</td>
                        <td>{% for p in d.processes | filter(p => p.activ) %}{{ p.name }}<br>{% endfor %}</td>
                        <td>{% if d.approved %}<span
                                    class="note-success p-1">{% trans %}approved{% endtrans %}</span>{% else %}{{ d.statusString }}{% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}