{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block body %}

    <h2 class="h2-responsive">{{ title }}</h2>

    <div class="card card-body">
        <div class="row">
            <div class="col-md-7">
                <ul class="list-group">
                    {% for d in data %}
                        <li class="list-group-item">{{ d.email }} <a class="btn btn-sm btn-danger"
                                                                     href="{{ path('akademie_mitglieder_remove',{'id':d.id}) }}">Entfernen</a>
                        </li>
                    {% endfor %}
                </ul>

            </div>
            <div class="col-md-5">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}
{% endblock %}
