{% extends 'email/base.html.twig' %}
{% trans_default_domain 'email' %}
{% block header %}
    {% trans %}subject.notificationComment{% endtrans %}
{% endblock %}

{% block content %}
    {% trans with {
        '%title%': title,
        '%dataTitle%': data.title,
        '%path%': absolute_url(path('client_index', {'slug':team.slug})),
        '%teamName%': data.team.name
    } | raw %}
        body.notificationComment
    {% endtrans %}
    {% trans with {
        '%teamName%': data.team.name,
        '%teamEmail%': data.team.email,
        '%teamPhone%': data.team.telefon
    } | raw %}
        salutation.signature.html
    {% endtrans %}
{% endblock %}
