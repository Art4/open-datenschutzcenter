{% apply inky_to_html|inline_css(source('@css/foundation-emails.css')) %}
    <style type="text/css">
        body,
        html,
        .body {
            background: #f3f3f3 !important;
        }

        .container.header {
            background: #f3f3f3;
        }

        .body-border {
            border-top: 8px solid #ff002a;
        }
    </style>

    <spacer size="16"></spacer>

    <container class="header">
        <row>
            <columns>
                <h1 class="text-center">
                    {% block header %}


                    {% endblock %}
                </h1>

            </columns>
        </row>
    </container>

    <container class="body-border">
        <row>
            <columns>

                <spacer size="32"></spacer>

                <spacer size="16"></spacer>
                {% block content %}

                {% endblock %}
                <spacer size="16"></spacer>
                <p>
                    <a href="{{ imprint }}">Impressum</a>
                </p>
                <p>
                    <a href="{{ dataPrivacy }}">Datenschutzhinweis</a>
                </p>
            </columns>
        </row>

        <spacer size="16"></spacer>
        <center>
            <small>
                Powered by Open Datenschutzcenter
            </small>
        </center>

    </container>
{% endapply %}
