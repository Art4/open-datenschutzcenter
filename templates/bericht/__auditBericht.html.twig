{% trans_default_domain 'audit_tom' %}
<h2 style="page-break-before: always;">{% if not d.activ %}{% trans %}history{% endtrans %}: {% endif %}{{ d.frage }} (id:{{ d.id }})</h2>
<style>
    th, td {
        padding: 5px;
        border: 1px solid black;
        width: 50%;
    }
</style>
<table style="table-layout:fixed; width: 100%">
    <tr>
        <td>
            {% trans %}status{% endtrans %}
        </td>
        <td style="background-color: {{ d.status.color }}">{{ d.status.name }}</td>
    </tr>
    <tr>
        <td>
            {% trans from 'general' %}number{% endtrans %}
        </td>
        <td><a href="{{ absolute_url(path('audit_tom_edit', {'tom':d.id})) }}">{{ d.nummer }}</a></td>
    </tr>
    <tr>
        <td>
            {% trans %}question{% endtrans %}
        </td>
        <td>{{ d.frage }}</td>
    </tr>
    <tr>
        <td>
            {% trans %}category{% endtrans %}
        </td>
        <td>{{ d.kategorie }}</td>
    </tr>
    <tr>
        <td>
            {% trans %}annotation{% endtrans %}
        </td>
        <td>{{ d.bemerkung }}</td>
    </tr>
    <tr>
        <td>
            {% trans %}suggestion{% endtrans %}
        </td>
        <td>{{ d.empfehlung }}</td>
    </tr>
    <tr>
        <td>
           {% trans %}safetyGoal{% endtrans %}
        </td>
        <td>{% for p in d.ziele %}{{ p.name }},<br>{% endfor %}</td>
    </tr>
    <tr>
        <td>
            {% trans %}department{% endtrans %}
        </td>
        <td>{% for p in d.abteilung %}{{ p.name }},<br>{% endfor %}</td>
    </tr>
    <tr>
        <td>
            {% trans %}tomCategory{% endtrans %}
        </td>
        <td>{{ d.tomZiel }}</td>
    </tr>
    <tr>
        <td>
            {% trans %}tomAttribute{% endtrans %}
        </td>
        <td>{{ d.tomAttribut }}</td>
    </tr>

</table>
{{ d.createdAt|date('d.m.Y H:i') }} by {{ d.user.email }}
{% if d.previous and all == 1 %}
    {{ include('bericht/__auditBericht.html.twig', {'d':d.previous}) }}
{% endif %}