{% trans_default_domain 'bericht' %}
<!DOCTYPE html>
<style>
    /** Define the margins of your page **/
    @page {
        margin: 90px 60px;
    }

    header {
        position: fixed;
        top: -50px;
        left: 0px;
        right: 0px;
        height: 40px;

        /** Extra personal styles **/
        text-align: center;
        line-height: 20px;
    }

    footer {
        position: fixed;
        bottom: -50px;
        left: 0px;
        right: 0px;
        height: 30px;

        /** Extra personal styles **/
        text-align: center;
        line-height: 20px;
    }
</style>
<body>
<header>
    {% if daten[0].nummer is defined %}{{ daten[0].nummer }} - {% endif %}{{ team.name }}
</header>

<main>
    <div style="font-family: Helvetica">
        <h1 style="margin-top: 200px">{{ titel }}</h1>
        <h3 style="margin-top: 50px">{% trans %}responsible{% endtrans %}:</h3>
        <h4>
            {{ team.name }}<br>
            {{ team.strasse }}<br>
            {{ team. plz }} {{ team.stadt }}
        </h4>

        <p>-------------------------</p>
        <h4>
            {% trans from 'general' %}phone{% endtrans %}: {{ team.telefon }}<br>
            {% trans from 'general' %}email{% endtrans %}: {{ team.email }}
        </h4>
        <p>-------------------------</p>
        <h4>
            {% trans %}representedBy{% endtrans %}: {{ team.ceo }}<br>
            {% if team.dsb %}{% trans %}dataProtectionOfficer{% endtrans %}: {{ team.dsb }}{% endif %}
        </h4>
        <p>-------------------------</p>

        <h5 style="margin-top: 40px">{% trans %}exportCreatedAt{% endtrans %}: {{ "now"|date('d.m.Y H:i') }}</h5>
        <h5>{% trans %}versionCreatedBy{% endtrans %}: {{ app.user.email }}</h5>

        {% block body %}{% endblock %}
    </div>
</main>

<footer>
    {% trans from 'general' %}createdAt{% endtrans %}: {{ "now"|date("d.m.Y H:i") }}
    {% trans %}with {% endtrans%} <strong>{% trans %}openDataPrivacyCenter.word{% endtrans %}</strong><br>
    <small>{% trans %}openDataPrivacyCenter.disclaimer{% endtrans %}</small>
</footer>
</body>
