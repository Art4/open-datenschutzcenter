{% extends 'base.html.twig' %}

{% block CTA %}
    <a class="btn btn-indigo ml-1 btn-sm" href="{{ path('software_new') }}">
        <span>{% trans %}newSoftware{% endtrans %}</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">{% trans %}softwareOverview{% endtrans %}</h2>

    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped ">
                <thead>
                <tr>
                    <th scope="col">{% trans %}name{% endtrans %}</th>
                    <th scope="col">{% trans %}reference{% endtrans %}</th>
                    <th scope="col">{% trans %}inventory{% endtrans %}</th>
                    <th scope="col">{% trans %}processings{% endtrans %}</th>
                    <th scope="col">{% trans %}dataTransfers{% endtrans %}</th>
                    <th scope="col">{% trans %}purchaseDate{% endtrans %}</th>
                    <th scope="col">{% trans %}licence{% endtrans %}</th>
                    <th scope="col">{% trans %}expiration{% endtrans %}</th>
                    <th scope="col">{% trans %}status{% endtrans %}</th>
                </tr>
                </thead>
                <tbody>
                {% for d in data %}
                    <tr class="clickable-row" data-href='{{ path('software_edit',{'id':d.id}) }}'>
                        <th scope="row">{{ d.name }}</th>
                        <td>{{ d.reference }}</td>
                        <td>{{ d.nummer }}</td>
                        <td>{% for p in d.vvts | filter(p => p.activ) %}{{ p.name }}<br>{% endfor %}</td>
                        <td>{% for p in d.datenweitergabe | filter(p => p.activ) %}{{ p.gegenstand }}<br>{% endfor %}
                        </td>
                        <td>{{ d.purchase|date('d.m.Y') }}</td>
                        <td>{{ d.licenseTypeString }}</td>
                        <td>{% if d.licenseExpiration %}{{ d.licenseExpiration|date('d.m.Y') }}{% else %}Ohne Ablaufdatum{% endif %}</td>
                        <td>{% if d.licenseExpiration < date() and d.licenseExpiration is not null %}
                                <span class="bg-danger p-1 text-uppercase">{% trans %}expired{% endtrans %}</span>
                            {% elseif d.approved %}
                                {% trans %}softwareApproved{% endtrans %}
                            {% elseif d.status == 60 %}
                                <span class="bg-info p-1">{{ d.statusString }}</span>
                            {% else %}
                                {{ d.statusString }}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {{ include('base/__snack.html.twig') }}
{% endblock %}