{% extends 'base.html.twig' %}

{% block CTA %}
    {% if tom.activ %}
        <a class="btn btn-amber ml-1 btn-sm" href="{{ path('bericht_tom', {'id':tom.id}) }}">
            <span>PDF erstellen</span>
        </a>
    {% endif %}
{% endblock %}

{% block body %}

    <h2 class="h2-responsive">{{ tom.titel }} - {{ title }}</h2>
    <div class="card card-body">
        {{ include('tom/__form.html.twig') }}
    </div>
    <p>Erstellt von: {{ tom.user.email }}</p>
    {% if tom.previous %}
        <div class="card card-body mt-2">
            <h2>Historie</h2>
            {{ include('tom/__history.html.twig', {'p':tom.previous}) }}
        </div>
    {% endif %}
{% endblock %}

{% block javascript %}
{% endblock %}
