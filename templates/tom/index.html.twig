{% extends 'base.html.twig' %}

{% block CTA %}
    <a class="btn btn-primary ml-1 btn-sm" href="{{ path('tom_new') }}">
        <span>Neue TOM anlegen</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">TOM Ãœbersicht</h2>
    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">VVT</th>
                    <th scope="col">Erstellt am</th>
                    <th scope="col">Titel</th>
                    <th scope="col">Beschreibung</th>
                </tr>
                </thead>
                <tbody>
                {% for t in tom %}
                    <tr class="clickable-row" data-href='{{ path('tom_edit',{'tom':t.id}) }}'>
                        <th scope="row">{{ t.id }}</th>
                        <td>{% for vv in t.Vvts | filter(vv => vv.activ) %}{{ vv.name }}<br>{% endfor %}</td>
                        <td>{{ t.createdAt|date('d.m.Y') }}</td>
                        <td>{{ t.titel }}</td>
                        <td>{{ t.beschreibung }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
