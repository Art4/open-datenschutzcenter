{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
<div class="card card-body">

    {% if activNummer %}
        {{ form_label(form.nummer) }}
        {{ form_widget(form.nummer) }}
        {{ form_errors(form.nummer) }}
    {% endif %}

