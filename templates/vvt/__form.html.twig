        <div>
            <div>
                {{ form_label(form.dsb) }}
                {{ form_help(form.dsb) }}
            </div>
            <div>
                {{ form_widget(form.dsb) }}
            </div>
        </div>
        <div>
            <div>
                <p>
                    {% trans %}processing.disclaimer{% endtrans %}
                </p>
            </div>
            <div>
                {% for p in vvt.policies | filter(p => p.activ) %}
                    <a href="{{ path('policy_edit',{'id':p.id}) }}">{{ p.title }}</a>
                {% endfor %}
            </div>
        </div>
        <div>
            {{ form_widget(form.save) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
