{% trans_default_domain 'team' %}
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

        <div class="modal-header  red white-text">
            <h5 class="modal-title">{% trans with {'{teamName}': team.name} %}team.delete{% endtrans %}</h5>
        </div>
        <div class="modal-body">
            {{ form_start(form, {'attr': {'action': path('team_delete', {'id':team.id}), 'method': 'POST'}}) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
