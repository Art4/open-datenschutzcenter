{% extends 'team/index.html.twig' %}

{% block body %}
    <h2 class="h2-responsive">{{ title }}</h2>

    <div class="card card-body ">
        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    {% for d in data %}
                        <li class="list-group-item">{{ d.name }}
                            <a href="{{ path('team_abteilungen', {'id':d.id}) }}"
                               class="btn btn-sm btn-info float-md-right">{% trans %}edit{% endtrans %}</a>
                            <a href="{{ path('team_abteilungen_deativate', {'id':d.id}) }}"
                               class="btn btn-sm btn-danger float-md-right">{% trans %}delete{% endtrans %}</a>
                        </li>
                    {% endfor %}
                </ul>

            </div>
            <div class="col-md-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
