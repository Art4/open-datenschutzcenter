{% extends 'base.html.twig' %}

{% block CTA %}
    <a class="btn btn-primary ml-1 btn-sm" href="{{ path('app_loeschkonzept_new') }}">
        <span>Neues Löschkonzept anlegen</span>
    </a>
{% endblock %}

{% block body %}
    <h2 class="h2-responsive">Löschkonzept Übersicht</h2>
    <div class="card card-body">
        <div class="table-responsive">
            <table id="data-table" class="table display table-striped">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Datenkategorien</th>
                    <th scope="col">Datenarten</th>
                    <th scope="col">Standard Löschfrist</th>
                    <th scope="col">gesetzliche Löschfrist</th>
                    <th scope="col">Speicherorte</th>
                    <th scope="col">Löschbeauftragter</th>
                    <th scope="col">Übersicht</th>
                </tr>
                </thead>
                <tbody>
                {% for l in loeschkonzepte %}
                    <tr class="clickable-row" data-href='{{ path('app_loeschkonzept_edit', {'id': l.id}) }}'>
                        <td>{{ l.id }}</td>
                        <td>{% for vv in l.vvtdatenkategories %}{{ vv.name }}<br>{% endfor %}</td>
                        <td>{% for vv in l.vvtdatenkategories %}{{ vv.datenarten }}<br>{% endfor %}</td>
                        <td>{{ l.standartlf }}</td>
                        <td>{{ l.loeschfrist }}</td>
                        <td>{{ l.speicherorte }}</td>
                        <td>{{ l.loeschbeauftragter }}</td>
                        <td>
                    <a href="{{ path('app_loeschkonzept_show', {'id': l.id}) }}">anzeigen</a>
                </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

